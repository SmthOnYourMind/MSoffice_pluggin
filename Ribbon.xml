<?xml version="1.0" encoding="UTF-8"?>
<customUI onLoad="Ribbon_Load" xmlns="http://schemas.microsoft.com/office/2009/07/customui" loadImage="GetImage">
    <ribbon>
        <tabs>
            <tab idMso="TabAddIns" label="Gigachat">
              <group id="group0">
                <button id="idLogo" image="Logo" size="large"/>
              </group>
                <group id="group1" label="Основные функции">
                    <button id="ribbon_button1" onAction="InsertToken" label="Вставить свой токен" showImage="false" />
                    <button id="ribbon_button2" onAction="SendRequest" label="Сгенерировать текст по запросу" showImage="false" />
                    <button id="ribbon_button3" onAction="ShowInstruction" label="Показать инструкцию" showImage="false" />
                    <button id="ribbon_button4" onAction="InsertDefaultToken" label="Вставить универсальный токен" showImage="false" />
                    <button id="ribbon_button5" onAction="ShowToken" label="Показать текущий токен" showImage="false" />
                </group>
                <group id="group2" label="Прочее">
                    <button id="ribbon_button6" onAction="ShowSertificates" label="Сертификаты Минцифры" showImage="false" />
                    <button id="ribbon_button7" onAction="ShowHelp" label="Помощь" showImage="false" />
                    <button id="ribbon_button8" onAction="ShowAbout" label="О нас" showImage="false" />
                </group>
            </tab>
        </tabs>
    </ribbon>
  <contextMenus>
    <contextMenu idMso="ContextMenuText">
      <button id="context_button1" label="Gigachat: Переписать другими словами" insertBeforeMso="HyperlinkInsert" onAction="GetButtonID" />
      <button id="context_button2" label="Gigachat: Расписать подробнее" insertBeforeMso="HyperlinkInsert" onAction="GetButtonID" />
      <button id="context_button3" label="Gigachat: Сжать текст" insertBeforeMso="HyperlinkInsert" onAction="GetButtonID" />
      <button id="context_button4" label="Gigachat: Перевод текста на английский" insertBeforeMso="HyperlinkInsert" onAction="GetButtonID" />
      <button id="context_button5" label="Gigachat: Перевод текста на русский" insertBeforeMso="HyperlinkInsert" onAction="GetButtonID" />
      <menu id="submenu" label="Gigachat: Изменить стиль текста" >
        <button id="submenu_button_1" label="Деловой" onAction="GetButtonID"/>
        <button id="submenu_button_2" label="Научный" onAction="GetButtonID"/>
        <button id="submenu_button_3" label="Разговорный" onAction="GetButtonID"/>
      </menu>
    </contextMenu>
  </contextMenus>
</customUI>
